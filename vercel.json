{
  "builds": [
    {
      "src": "Software_Engineering___Agile_Web_Application/wsgi.py",
      "use": "@vercel/python",
      "config": { 
        "maxLambdaSize": "15mb",
        "runtime": "python3.12.6" 
      }
    },
    {
      "src": "build.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "staticfiles_build"
       }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "Software_Engineering___Agile_Web_Application/wsgi.py"
    }
  ],
  "hooks": {
    "build": {
      "commands": [
        "python Software_Engineering___Agile_Web_Application/manage.py collectstatic --noinput"
      ]
    }
  }
}